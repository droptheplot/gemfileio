!!!
%html
  %head
    = page_title
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = meta_tags
    %link{ :href => 'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', :rel => 'stylesheet' }/
    %link{ :href => 'http:///gemfile.io/opensearch.xml', :rel => 'search', :title => 'Gemfileio', :type => 'application/opensearchdescription+xml' }/
    %base{ :href => '/' }
  %body
    %nav
      = render 'shared/nav'
    %header
      = render 'shared/header'
    %main
      .container
        .row
          .col-2
            %aside
              = render 'shared/aside'
          .col-10
            %content
              = yield
    - if notifications.length > 0
      .notifications
        = render 'shared/notifications'
    - if Rails.env.production?
      :javascript
